---
interface Props {
  type: 'ms' | 'phd';
}

const { type } = Astro.props;

const bgColor = type === 'ms' ? '#00274C' : '#FFCB05';
const textColor = type === 'ms' ? 'white' : '#00274C';
---

<span class={`pill ${type}`}>
  {type.toUpperCase()}
</span>

<style>
  @reference "../styles/global.css";
  .pill {
    display: inline;
    padding: 3px 8px;
    border-radius: 12px;
    font-size: 0.8em;
    font-weight: 700;
    margin-left: 8px;
  }

  .ms {
    background-color: var(--color-umichblue);
    color: #f3f4f6;
    border: 2px solid #1a3a5f;
  }

  .phd {
    background-color: var(--color-maize);
    color: var(--color-umichblue);
    border: 2px solid #ffd940;
  }

  @media (prefers-color-scheme: dark) {
    .ms {
      background-color: var(--color-umichblue);
      color: #f3f4f6;
      border: 2px solid #1a3a5f;
    }

    .phd {
      background-color: var(--color-maize);
      color: var(--color-umichblue);
      border: 2px solid #ffd940;
    }
  }
</style> 