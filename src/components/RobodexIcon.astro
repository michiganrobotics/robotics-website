---
// RobodexIcon.astro - Custom icon for Robodex references
export interface Props {
  class?: string;
}

const { class: className = "w-4 h-4" } = Astro.props;
---

<svg 
  class={`inline-block ${className}`} 
  viewBox="0 -1 24 26" 
  fill="none" 
  xmlns="http://www.w3.org/2000/svg"
  aria-hidden="true"
>
  <!-- Simple PDA-style device -->
  <!-- Main body -->
  <rect x="6" y="3" width="12" height="18" rx="2" stroke="currentColor" stroke-width="1.5" fill="none"/>
  
  <!-- Simple straight antenna -->
  <line x1="12" y1="3" x2="12" y2="0" stroke="currentColor" stroke-width="1.5" stroke-linecap="round"/>
  <!-- Antenna tip -->
  <circle cx="12" cy="0" r="0.6" fill="#FFCB05" stroke="currentColor" stroke-width="0.6"/>
  <!-- Sparkle on tip -->
  <circle cx="12.2" cy="-0.2" r="0.15" fill="white" opacity="0.9"/>
  
  <!-- Screen -->
  <rect x="7.5" y="4.5" width="9" height="8" rx="0.5" stroke="currentColor" stroke-width="0.8" fill="none"/>
  
  <!-- Screen content - simple lines -->
  <line x1="8" y1="6" x2="15" y2="6" stroke="currentColor" stroke-width="0.8" stroke-linecap="round"/>
  <line x1="8" y1="8" x2="13" y2="8" stroke="currentColor" stroke-width="0.8" stroke-linecap="round"/>
  <line x1="8" y1="10" x2="14" y2="10" stroke="currentColor" stroke-width="0.8" stroke-linecap="round"/>
  
  <!-- Scanner lens -->
  <circle cx="12" cy="17" r="2" fill="#FFCB05" stroke="currentColor" stroke-width="1"/>
</svg>