---
import { Image } from 'astro:assets';

interface Props {
  images: {
    src: string | ImageMetadata;
    alt: string;
    caption?: string;
  }[];
  variant?: 'default' | 'profile';
}

const { images, variant = 'default' } = Astro.props;

const gridClass = variant === 'profile' 
  ? 'grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-8 justify-items-center text-center'
  : images.length === 3 
    ? 'photo-gallery-three-item gap-6'
    : 'grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6';
---

<div class={`not-prose ${gridClass} py-6`}>
  {
    images.map((image) => (
      <div class={variant === 'profile' 
        ? 'w-[150px] md:w-[180px]' 
        : 'w-full mb-6'
      }>
        <div class={variant === 'profile'
          ? 'aspect-square overflow-hidden rounded-full border-3 border-umichblue dark:border-maize transition-transform'
          : 'aspect-video overflow-hidden rounded-sm transition-transform'
        }>
          {typeof image.src === 'string' ? (
            <img 
              src={image.src} 
              alt={image.alt} 
              loading="lazy"
              class="w-full h-full object-cover" 
            />
          ) : (
            <Image 
              src={image.src} 
              alt={image.alt}
              class="w-full h-full object-cover"
            />
          )}
        </div>
        {image.caption && (
          <div class="mt-3">
            {variant === 'profile' ? (
              image.caption.split('\n').map((line, i) => (
                <p class={i === 0 
                  ? 'italic text-base text-umichblue dark:text-maize' 
                  : 'text-sm text-gray-700 dark:text-gray-200 mt-1'
                }>
                  {line}
                </p>
              ))
            ) : (
              <figcaption class="text-sm text-gray-600 dark:text-gray-200 mt-2">
                {image.caption}
              </figcaption>
            )}
          </div>
        )}
      </div>
    ))
  }
</div>

<style>
  .photo-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
    padding: 1.5rem 0;
  }

  .photo-gallery-three-item {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
    padding: 1.5rem 0;
  }

  @media (min-width: 640px) {
    .photo-gallery-three-item {
      grid-template-columns: 1fr 1fr;
      grid-template-areas: 
        "first second"
        "third third";
    }
    
    .photo-gallery-three-item > *:nth-child(1) {
      grid-area: first;
    }
    
    .photo-gallery-three-item > *:nth-child(2) {
      grid-area: second;
    }
    
    .photo-gallery-three-item > *:nth-child(3) {
      grid-area: third;
    }
  }

  @media (min-width: 1024px) {
    .photo-gallery-three-item {
      grid-template-columns: 1fr 1fr 1fr;
      grid-template-areas: "first second third";
    }
    
    .photo-gallery-three-item > *:nth-child(3) {
      grid-area: third;
    }
  }

  .photo-gallery.profile-grid {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 2rem;
    justify-items: center;
    text-align: center;
  }

  .photo-item {
    break-inside: avoid;
    margin-bottom: 1.5rem;
  }

  .photo-item.profile-item {
    margin-bottom: 0;
    width: 150px;
  }

  .photo-item.profile-item img {
    aspect-ratio: 1;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid #00274c;
  }

  .photo-item img {
    width: 100%;
    height: auto;
    border-radius: 0.5rem;
    transition: transform 0.2s ease-in-out;
    object-fit: cover;
  }

  .caption {
    margin-top: 0.75rem;
    text-align: center;
  }

  .caption p {
    margin: 0;
    line-height: 1.2;
  }

  .caption .name {
    font-weight: 600;
    font-size: 1rem;
    color: #00274c;
  }

  .caption .title {
    font-size: 0.875rem;
    color: #666;
    margin-top: 0.25rem;
  }

  @media (min-width: 768px) {
    .photo-gallery:not(.profile-grid) {
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    }

    .photo-gallery.profile-grid {
      grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    }

    .photo-item.profile-item {
      width: 180px;
    }
  }
</style> 