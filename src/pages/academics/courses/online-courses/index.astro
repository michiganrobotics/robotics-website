---
import Layout from '../../../../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import Breadcrumbs from "../../../../components/Breadcrumbs.astro";
import PageTitle from "../../../../components/PageTitle.astro";
import featureImage from '../../../../images/featured-images/academics-online-courses.jpg';
import ogFeatureImage from '../../../../images/featured-images/og/academics-online-courses.jpg';

// Import course images
import rob101 from '../../../../images/online-courses/rob101.jpg';
import rob102 from '../../../../images/online-courses/rob102.jpg';
import rob201 from '../../../../images/online-courses/rob201.jpg';
import rob311 from '../../../../images/online-courses/rob311.jpg';
import rob320 from '../../../../images/online-courses/rob320.jpg';
import rob501 from '../../../../images/online-courses/rob501.jpg';
import rob502 from '../../../../images/online-courses/rob502.jpg';
import rob530 from '../../../../images/online-courses/rob530.jpg';

const courses = [
  {
    title: "ROB 101: Computational Linear Algebra",
    image: rob101,
    link: "https://github.com/michiganrobotics/rob101/tree/main/Fall%202021"
  },
  {
    title: "ROB 102: Introduction to AI and Programming",
    image: rob102,
    link: "https://robotics102.github.io"
  },
    {
    title: "ROB 201: Calculus for the Modern Engineer",
    image: rob201,
    link: "https://github.com/michiganrobotics/rob201"
  },
  {
    title: "ROB 311: How to Build Robots and Make Them Move",
    image: rob311,
    link: "https://github.com/michiganrobotics/rob311"
  },
  {
    title: "ROB 320: Robot Operating Systems",
    image: rob320,
    link: "https://autorob.org"
  },
  {
    title: "ROB 501: Mathematics for Robotics",
    image: rob501,
    link: "https://github.com/michiganrobotics/rob501"
  },
  {
    title: "ROB 502: Programming for Robotics",
    image: rob502,
    link: "/academics/courses/online-courses/rob502-f20/"
  },
  {
    title: "ROB 530: Mobile Robotics",
    image: rob530,
    link: "https://github.com/UMich-CURLY-teaching/UMich-ROB-530-public"
  }
];
---

<Layout title="Online Courses | Michigan Robotics" image={ogFeatureImage.src} imageAlt="The Robotics Building aerial view with a water tower in the distance" description="Freely accessible robotics courses through sites like GitHub and YouTube, typically including all lecture videos, notes, textbooks, homework, projects, and exams.">
  <Breadcrumbs />
  <PageTitle title="Online Courses" image={featureImage} imageAlt="Robotics Building during sunrise with brilliant colors and a water tower in the distance" imagePosition="0% 35%" />
  <article class="prose dark:prose-invert mt-4 mb-4 max-w-6xl w-11/12 mx-auto">
    <div class="mb-8 mt-8 relative">
      <h2 class="text-xl font-roboto text-gray-800 dark:text-gray-200 leading-relaxed not-prose italic tracking-wide">
        Sharing our knowledge and curriculum</h2>
      <div class="subtitle-double-line"></div>
    </div>
      <p>Michigan Robotics publishes many courses online, which can be freely accessed through sites like GitHub and YouTube. These courses typically include all lecture videos, notes, textbooks, homework, projects, and exams.</p>
     <div class="mt-12 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 not-prose">
      {courses.map(course => (
        <div class="card-base surface border border-arboretumBlue p-4">
          <a href={course.link} class="block no-underline group">
            <div class="relative mb-4 overflow-hidden rounded-t-lg">
              <Image 
                src={course.image} 
                alt={course.title}
                width={300}
                height={200}
                class="w-full h-56 object-cover image-hover"
              />
              <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-20 transition-opacity duration-300"></div>
            </div>
            <div class="px-2">
              <h2 class="text-xl font-bold group-hover:text-umichblue dark:group-hover:text-maize transition-colors duration-300">
                {course.title}
              </h2>
              <div class="mt-2 flex items-center text-sm group-hover:text-umichblue dark:group-hover:text-maize transition-colors duration-300">
                <span>View Course</span>
                <svg class="ml-2 w-3 h-3 transition-transform duration-300 group-hover:translate-x-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
              </div>
            </div>
          </a>
          {course.additionalLink && (
            <p class="mt-2 px-2">
              (<a href={course.additionalLink.url} class="text-umichblue dark:text-maize hover:underline">
                {course.additionalLink.text}
              </a> also available)
            </p>
          )}
        </div>
      ))}
    </div>
  </article>
</Layout>