---
import Layout from '../../../../layouts/MainLayout.astro';
import { Image } from 'astro:assets';
import Breadcrumbs from "../../../../components/Breadcrumbs.astro";
import PageTitle from "../../../../components/PageTitle.astro";
import { get590690Data } from '../../../../lib/googleSheets';

import featureImage from '../../../../images/featured-images/academics-courses-590.jpg';

const projectData = await get590690Data();

// Helper function to convert URLs in text to clickable links
function linkifyText(text: string): string {
  if (!text) return '';
  const urlRegex = /(https?:\/\/[^\s<>)\]]+)/g;
  return text.replace(urlRegex, '<a href="$1" target="_blank" rel="noopener noreferrer" class="text-umichblue dark:text-[#7eb8da] underline hover:no-underline" onclick="event.stopPropagation()">$1</a>');
}
---

<Layout title="Current 590/690 Research Projects | Michigan Robotics" description="Current ROB 590 and ROB 690 independent research projects available for students.">
    <Breadcrumbs />
    <PageTitle title="Current ROB 590/690 Research Projects" image={featureImage} imageAlt="Students studying in the Robotics Building atrium" imagePosition="25% 75%" />
      <div class="prose dark:prose-invert max-w-6xl w-11/12 mx-auto mt-4 mb-4">
          <p class="mb-4">
            Current ROB 590 and ROB 690 independent research projects intended for Robotics MS students. These projects are submitted by faculty members and offer opportunities for hands-on research experience.
          </p>
          <p class="mb-4">
            Once you have been selected by a faculty member to participate in a ROB 590 project, 
            please <a href="https://robotics.umich.edu/academics/student-services/registering-for-classes/" 
              target="_blank" 
              rel="noopener noreferrer">register for ROB 590</a>, 
            then submit the 
            <a href="https://docs.google.com/forms/d/e/1FAIpQLSea5YctmfxwoRBWPfQxC6n1Pw8-SU2IHf8MXTZQ09rNmhu_CA/viewform" 
              target="_blank" 
              rel="noopener noreferrer">ROB 590/690 Proposal Form</a>.
            Registration for ROB 690 requires advisor approval. Please have your advisor send an email to 
            <a href="mailto:robotics-sso@umich.edu">robotics-sso@umich.edu</a> confirming their approval. 
            Once the Robotics SSO receives this email, they will issue electronic permission, after which you will be able to formally register for the course.
          </p>
          <p class="mb-4">
            Search to find projects that match your interests by <strong>faculty name</strong>, <strong>lab</strong>, <strong>project name</strong>, or <strong>research area</strong>.
          </p>
          <div class="relative">
              <div class="mb-4">
                <input type="text" id="searchInput" placeholder="Search projects..." 
                  class="search-bar"
                />
              </div>
              <div class="overflow-x-auto shadow-md">
                <table class="w-full text-sm text-left">
                  <thead class="text-xs uppercase page-bg">
                    <tr>
                      <th scope="col" class="px-4 py-3 cursor-pointer border-r" data-sort="faculty">
                        Faculty
                        <span class="ml-1">↕</span>
                      </th>
                      <th scope="col" class="px-4 py-3 cursor-pointer border-r" data-sort="lab">
                        Lab
                        <span class="ml-1">↕</span>
                      </th>
                      <th scope="col" class="px-4 py-3 cursor-pointer border-r" data-sort="project">
                        Project Name
                        <span class="ml-1">↕</span>
                      </th>
                      <th scope="col" class="px-4 py-3 border-r">
                        Description
                      </th>
                      <th scope="col" class="px-4 py-3 border-r">
                        How to Apply
                      </th>
                      <th scope="col" class="px-4 py-3 cursor-pointer border-r" data-sort="deadline">
                        Deadline
                        <span class="ml-1">↕</span>
                      </th>
                      <th scope="col" class="px-4 py-3 border-r">
                        Contact
                      </th>
                      <th scope="col" class="px-4 py-3">
                        Additional Info
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    {projectData.map((project) => (
                      <tr class="bg-[var(--bg-undersurface-light)] dark:bg-[var(--bg-undersurface-dark)] border-b hover:bg-[var(--bg-surface-hover)] dark:hover:bg-[var(--bg-surface-hover-dark)]">
                        <th scope="row" class="px-6 py-4 font-medium border-r align-top">
                          {project.facultyName}
                        </th>
                        <td class="px-6 py-4 border-r align-top">
                          {project.labName}
                        </td>
                        <td class="px-6 py-4 border-r align-top">
                          {project.projectName}
                        </td>
                        <td class="px-6 py-4 border-r align-top max-w-md">
                          <div class="desc-wrapper">
                            <div class="desc-content line-clamp-3">
                              <span set:html={linkifyText(project.projectDescription)} />
                            </div>
                            <span class="click-more">(click to expand)</span>
                          </div>
                        </td>
                        <td class="px-6 py-4 border-r align-top">
                          <span set:html={linkifyText(project.howToApply)} />
                        </td>
                        <td class="px-6 py-4 border-r align-top">
                          {project.applicationDeadline}
                        </td>
                        <td class="px-6 py-4 border-r align-top">
                          <div class="font-medium">{project.projectContactName}</div>
                          {project.projectContactEmail && (
                            <div class="text-sm">
                              <a href={`mailto:${project.projectContactEmail}`} class="underline hover:text-umichblue dark:hover:text-gray-300">
                                {project.projectContactEmail}
                              </a>
                            </div>
                          )}
                        </td>
                        <td class="px-6 py-4 align-top">
                          <span set:html={linkifyText(project.additionalInfoLink || '')} />
                        </td>
                      </tr>
                    ))}
                  </tbody>
                </table>
              </div>
            </div>
          </div>

          <script>
            // Check if description cells are truncated and show/hide "click to expand"
            function checkTruncation() {
              document.querySelectorAll('.desc-wrapper').forEach(wrapper => {
                const content = wrapper.querySelector('.desc-content') as HTMLElement;
                const clickMore = wrapper.querySelector('.click-more') as HTMLElement;
                if (!content || !clickMore) return;

                const isExpanded = wrapper.classList.contains('expanded');

                if (isExpanded) {
                  // When expanded, hide click-more but keep pointer cursor
                  clickMore.style.display = 'none';
                  (wrapper as HTMLElement).style.cursor = 'pointer';
                } else {
                  // When collapsed, check if content is truncated
                  const isTruncated = content.scrollHeight > content.clientHeight;
                  if (isTruncated) {
                    clickMore.style.display = 'block';
                    (wrapper as HTMLElement).style.cursor = 'pointer';
                  } else {
                    clickMore.style.display = 'none';
                    (wrapper as HTMLElement).style.cursor = 'default';
                  }
                }
              });
            }

            // Add click handlers to toggle expanded state
            document.querySelectorAll('.desc-wrapper').forEach(wrapper => {
              wrapper.addEventListener('click', (e) => {
                // Don't toggle if clicking a link
                if ((e.target as HTMLElement).tagName === 'A') return;
                wrapper.classList.toggle('expanded');
                checkTruncation();
              });
            });

            // Run on load and window resize
            checkTruncation();
            window.addEventListener('resize', checkTruncation);

            // Search functionality
            const searchInput = document.getElementById('searchInput');
            const tableRows = document.querySelectorAll('tbody tr');
            
            if (searchInput) {
              searchInput.addEventListener('keyup', function(e) {
                if (e.target) {
                  const searchTerm = (e.target as HTMLInputElement).value.toLowerCase();
                  
                  tableRows.forEach(row => {
                    const text = row.textContent?.toLowerCase() || '';
                    if (row instanceof HTMLElement) {
                      row.style.display = text.includes(searchTerm) ? '' : 'none';
                    }
                  });
                }
              });
            }

            // Sorting functionality
            const getCellValue = (tr: HTMLElement, idx: number) => {
              const cell = tr.children[idx];
              return cell ? cell.textContent || '' : '';
            };
            
            const comparer = (idx: number, asc: boolean) => (a: HTMLElement, b: HTMLElement) => {
              const v1 = getCellValue(a, idx);
              const v2 = getCellValue(b, idx);
              return v1 !== '' && v2 !== '' && !isNaN(Number(v1)) && !isNaN(Number(v2))
                ? (asc ? 1 : -1) * (Number(v1) - Number(v2))
                : (asc ? 1 : -1) * v1.toString().localeCompare(v2);
            };
            
            document.querySelectorAll('th[data-sort]').forEach(th => {
              let asc = true;
              th.addEventListener('click', () => {
                const table = th.closest('table');
                const tbody = table?.querySelector('tbody');
                if (!tbody) return;
                
                const columnIndex = Array.from(th.parentElement?.children || []).indexOf(th);
                
                // Update sort indicators
                if (th.parentElement) {
                  th.parentElement.querySelectorAll('th').forEach(header => {
                    const span = header.querySelector('span');
                    if (span) {
                      span.textContent = '↕';
                    }
                  });
                }
                
                const span = th.querySelector('span');
                if (span) {
                  span.textContent = asc ? '↑' : '↓';
                }
                
                const rows = Array.from(tbody.querySelectorAll('tr'));
                rows.sort(comparer(columnIndex, asc))
                  .forEach(tr => tbody.appendChild(tr));
                
                asc = !asc;
              });
            });
          </script>
</Layout>
<style>
  .desc-wrapper {
    cursor: default;
  }

  .desc-wrapper.expanded .desc-content {
    -webkit-line-clamp: unset !important;
    line-clamp: unset !important;
    display: block;
  }

  .click-more {
    display: none;
    font-size: 0.75rem;
    color: var(--text-muted);
    font-style: italic;
    margin-top: 0.25rem;
  }
</style>