---
import MainLayout from "../../layouts/MainLayout.astro";
import Breadcrumbs from "../../components/Breadcrumbs.astro";
import SubNav from "../../components/SubNav.astro";
import { Icon } from "astro-icon/components";
import GameModal from "../../components/GameModal.astro";
import PageTitle from "../../components/PageTitle.astro";
---

<MainLayout title="Contact | Michigan Robotics" description="Find out how to get in touch with Michigan Robotics">
  <Breadcrumbs />
  <PageTitle title="Contact us" />
  <link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" slot="head"/>
  <script is:inline src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>


    <div class="mt-8 mb-4 max-w-6xl w-11/12 mx-auto">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <div class="card-base card-padded surface">
          <div class="flex items-center mb-4">
            <Icon name="mdi:email" class="w-6 h-6 text-umichblue dark:text-arboretumBlue mr-2" />
            <h2 class="text-2xl font-roboto-condensed font-bold text-umichblue dark:text-neutral-50">General Inquiries</h2>
          </div>
          <p class="mb-4">For general questions, please:</p>
          <a href="mailto:robotics-contact@umich.edu" class="underline-hover-only text-arboretumBlue dark:text-maize flex items-center">
            <Icon name="mdi:arrow-right" class="w-4 h-4 mr-1" />
            Email robotics-contact@umich.edu
          </a>
        </div>

        <div class="card-base card-padded surface">
          <div class="flex items-center mb-4">
            <Icon name="mdi:school" class="w-6 h-6 text-umichblue dark:text-arboretumBlue mr-2" />
            <h2 class="text-2xl font-roboto-condensed font-bold text-umichblue dark:text-neutral-50">Academic Inquiries</h2>
          </div>
          <p class="mb-4">For questions about admissions, courses, or academic programs:</p>
          <div class="space-y-2">
            <a href="/academics/" class="underline-hover-only text-arboretumBlue dark:text-maize flex items-center">
              <Icon name="mdi:arrow-right" class="w-4 h-4 mr-1" />
              Make sure to review academic information
            </a>
            <a href="mailto:robotics-sso@umich.edu" class="underline-hover-only text-arboretumBlue dark:text-maize flex items-center">
              <Icon name="mdi:arrow-right" class="w-4 h-4 mr-1" />
              Email robotics-sso@umich.edu
            </a>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
        <div class="card-base card-padded surface">
          <div class="flex items-center mb-4">
            <Icon name="mdi:map-marker" class="w-6 h-6 text-umichblue dark:text-arboretumBlue mr-2" />
            <h2 class="text-2xl font-roboto-condensed font-bold text-umichblue dark:text-neutral-50">Visit Us</h2>
          </div>
          <address class="not-italic text-lg leading-relaxed mb-4" aria-label="Michigan Robotics mailing address">
            Ford Motor Company Robotics Building<br>
            2505 Hayward St<br>
            Ann Arbor, MI<br>
            48109-2106
          </address>
          <a href="/about/facilities/ford-robotics-building#visitor-info" class="underline-hover-only text-arboretumBlue dark:text-maize flex items-center">
           <Icon name="mdi:arrow-right" class="w-4 h-4 mr-1" /> Transit, parking, and more visitor information</a>
          </p>
        </div>
        <div id="map" class="rounded-lg shadow-md overflow-hidden h-[300px]"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div class="card-base card-padded surface">
          <div class="flex items-center mb-4">
            <Icon name="mdi:newspaper" class="w-6 h-6 text-umichblue dark:text-arboretumBlue mr-2" />
            <h2 class="text-2xl font-roboto-condensed font-bold text-umichblue dark:text-neutral-50">Media</h2>
          </div>
          <p class="mb-4">For press or media inquiries, contact:</p>
          <a href="/people/staff/dan-newman/" class="underline-hover-only text-arboretumBlue dark:text-maize flex items-center">
            <Icon name="mdi:arrow-right" class="w-4 h-4 mr-1" />
            Dan Newman
          </a>
          <span class="mt-2 text-sm text-neutral-600 dark:text-neutral-300">
            Communications Manager
            <button 
              aria-label="Play Communications Manager game" 
              class="inline-block focus:outline-none focus:ring-2 focus:ring-arboretumBlue dark:focus:ring-maize"
              id="commsManagerTitle">
              <Icon name="mdi:desktop-classic" class="w-4 h-4 inline-block ml-1 cursor-pointer hover:text-arboretumBlue dark:hover:text-maize transition-colors" />
              <span class="sr-only">Click to play a simple ASCII game where you connect phone lines</span>
            </button>
          </span>
          <GameModal />
        </div>

        <div class="card-base card-padded surface">
          <div class="flex items-center mb-4">
            <Icon name="mdi:tshirt-crew" class="w-6 h-6 text-umichblue dark:text-arboretumBlue mr-2" />
            <h2 class="text-2xl font-roboto-condensed font-bold text-umichblue dark:text-neutral-50">Gear Shop</h2>
          </div>
          <p class="mb-4">Support our robotics outreach programs by purchasing Michigan Robotics gear and apparel:</p>
          <a href="https://www.aatwebstore.com/UMBOT/shop/home" class="underline-hover-only text-arboretumBlue dark:text-maize flex items-center">
            <Icon name="mdi:arrow-right" class="w-4 h-4 mr-1" />
            Visit gear store
          </a>
        </div>
      </div>
    </div>
  </div>
</MainLayout>

<script>
  window.onload = function() {
    var map = L.map('map').setView([42.2926, -83.7144], 16);

    L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
      attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
    }).addTo(map);

    L.marker([42.2943546,-83.7096]).addTo(map)
      .bindPopup('Ford Motor Company Robotics Building<br>2505 Hayward St')
      .openPopup();
  }
</script>